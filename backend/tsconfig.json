{
	"compilerOptions": {
		// File Layout
		"rootDir": "./src",
		"outDir": "./dist",

		// Environment Settings
		"module": "nodenext",
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["node"],

		// Other Outputs
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		// Stricter Typechecking Options
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		// Style Options
		"noFallthroughCasesInSwitch": true,

		// Recommended Options
		"isolatedModules": true,
		"skipLibCheck": true,
		"moduleDetection": "force"
	},
	"include": ["src/**/*", "lib/**/*"], // <-- ADD THIS LINE
	"exclude": ["node_modules", "dist"]
}

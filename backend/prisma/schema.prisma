generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma/client" // <-- For example
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  // Must match the UUID type used by Supabase Auth
  id           String     @id @db.Uuid
  applications Job[]
  accounts     Account[]
  sessions     Session[]
  reminders    Reminder[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Job {
  id               String       @id @default(uuid())
  title            String
  company          String
  applicationDate  DateTime
  status           JobStatus    @default(APPLIED)
  jobDetail        String
  jobUrl           String?
  skillsRequired   String
  jobRequirements  String
  experienceNeeded Int?
  notes            String?
  salary           Int?
  location         String?
  userId           String       @db.Uuid
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  events           JobEvent[]
  reminders        Reminder[]
  attachments      Attachment[]
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@index([userId])
  @@index([status])
}

model JobEvent {
  id          String    @id @default(uuid())
  type        EventType
  title       String
  description String?
  date        DateTime
  jobId       String
  job         Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@index([jobId])
}

model Reminder {
  id          String       @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  completed   Boolean      @default(false)
  type        ReminderType @default(FOLLOW_UP)
  userId      String       @db.Uuid
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobId       String?
  job         Job?         @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([jobId])
}

model Attachment {
  id        String   @id @default(uuid())
  filename  String
  fileUrl   String
  fileType  FileType
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([jobId])
}

enum JobStatus {
  APPLIED
  INTERVIEWING
  OFFER
  REJECTED
  WITHDRAWN
}

enum EventType {
  APPLICATION
  INTERVIEW
  FOLLOW_UP
  OFFER_RECEIVED
  REJECTION
  OTHER
}

enum ReminderType {
  FOLLOW_UP
  INTERVIEW_PREP
  THANK_YOU_NOTE
  APPLICATION_DEADLINE
  OTHER
}

enum ExperienceLevel {
  JUNION
  MID
  SENIOR
}

enum FileType {
  PDF
  DOCX
  IMAGE
}
